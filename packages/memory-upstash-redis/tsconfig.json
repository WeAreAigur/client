{
	"extends": "tsconfig/base.json",
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"compilerOptions": {
		"target": "ES2020",
		"baseUrl": ".",
		"module": "ESNext",
		"strictNullChecks": true,
		"outDir": "dist",
		"paths": {
			"#/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
